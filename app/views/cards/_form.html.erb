<div class="container">
  <div class="row">

    <% if @card.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= t('common.errors', count: @card.errors.count) %></h5>
        <ul>
          <% @card.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= simple_form_for @card do |f| %>
      <%= f.input :original_text, label: t('common.original_text'), input_html: { id: 'form'}, :placeholder => t('cards.form.input') %>
      <br />
      <%= f.input :translated_text, label: t('common.translated_text'), input_html: { id: 'form'}, :placeholder => t('cards.form.translate') %>
      <br />
      <%= f.submit t('.submit', action: @card.new_record? ? t('common.create') : t('common.edit')), class: "btn btn-primary" %>
      <%= link_to t('common.back'), :back, class: "btn btn-outline-secondary" %>
    <% end %>

  </div>
</div>
